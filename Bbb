import streamlit as st

# العنوان في الأعلى
st.title("From Bassam to Layan")

# حقل الإدخال
user_input = st.text_input("اكتب شي هنا:")

# التحقق من الكلمة
if user_input.lower().strip() == "hi":
    st.success("I love you from the ends of the earth to the west")
elif user_input:
    st.warning("جرب تكتب: hi")
